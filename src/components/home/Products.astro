        }

        .productInfo {
          display: grid;
          place-content: center;
          grid-template-columns: repeat(3, 1fr);
          gap: var(--space-large);
          padding-top: 12rem;
          margin-bottom: 100vh;

          &__item {
            padding: var(--space-small);

            background-color: var(--grey-100);
            border-radius: var(--border-radius-m);
          }
        }

        &:last-child {
          .productInfo {
            margin-bottom: var(--space-large);
          }
        }
      }
    }
  }

